{
  "name": "ball-sort-puzzle",
  "displayName": "Ball Sort Puzzle",
  "version": "1.0.0",
  "description": "A challenging and addictive ball sorting puzzle game with 200 levels and premium features.",
  "main": "index.js",
  "scripts": {
    "build": "cordova build android",
    "build-release": "cordova build android --release",
    "run-android": "cordova run android",
    "run-android-device": "cordova run android --device",
    "emulate-android": "cordova emulate android",
    "prepare": "cordova prepare",
    "clean": "cordova clean",
    "add-android": "cordova platform add android",
    "remove-android": "cordova platform remove android",
    "install-plugins": "npm run install-cordova-plugins && npm run install-admob && npm run install-play-games",
    "install-cordova-plugins": "cordova plugin add cordova-plugin-whitelist cordova-plugin-splashscreen cordova-plugin-statusbar cordova-plugin-device cordova-plugin-network-information cordova-plugin-vibration cordova-plugin-dialogs cordova-plugin-file",
    "install-admob": "cordova plugin add admob-plus-cordova --variable APP_ID_ANDROID=ca-app-pub-XXXXXXXXXXXXXXXX~YYYYYYYYYY",
    "install-play-games": "cordova plugin add cordova-plugin-games-services --variable ANDROID_APP_ID=YOUR_GOOGLE_PLAY_GAMES_APP_ID",
    "setup-android": "npm run add-android && npm run install-plugins",
    "generate-icons": "cordova-res android --skip-config --copy",
    "generate-splash": "cordova-res android --skip-config --copy --type splash",
    "sign-apk": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore ball-sort-puzzle.keystore platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk ball-sort-puzzle",
    "align-apk": "zipalign -v 4 platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk ball-sort-puzzle-release.apk",
    "build-production": "npm run build-release && npm run sign-apk && npm run align-apk"
  },
  "keywords": [
    "ball sort",
    "puzzle game",
    "mobile game",
    "android",
    "cordova",
    "admob",
    "google play games"
  ],
  "author": "Ball Sort Puzzle Team",
  "license": "MIT",
  "devDependencies": {
    "cordova": "^12.0.0",
    "cordova-android": "^12.0.0",
    "cordova-res": "^0.15.4"
  },
  "dependencies": {
    "admob-plus-cordova": "^1.28.0",
    "cordova-plugin-device": "^3.0.0",
    "cordova-plugin-dialogs": "^2.0.2",
    "cordova-plugin-file": "^8.1.3",
    "cordova-plugin-play-games-services": "^1.1.2",
    "cordova-plugin-network-information": "^3.0.0",
    "cordova-plugin-splashscreen": "^6.0.2",
    "cordova-plugin-statusbar": "^4.0.0",
    "cordova-plugin-vibration": "^3.1.1",
    "cordova-plugin-whitelist": "^1.3.5"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-device": {},
      "cordova-plugin-network-information": {},
      "cordova-plugin-vibration": {},
      "cordova-plugin-dialogs": {},
      "cordova-plugin-file": {},
      "admob-plus-cordova": {
        "APP_ID_ANDROID": "ca-app-pub-6091627587181077~2291249310"
      },
      "cordova-plugin-play-games-services": {
        "ANDROID_APP_ID": "4973734059681006779"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ball-sort-puzzle.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ball-sort-puzzle/issues"
  },
  "homepage": "https://github.com/yourusername/ball-sort-puzzle#readme"
}
